    <body>
      <h1> <center>Choose a genre:</center></h1>
    
            <center><form action="/tv" method = "post">
                <input name = "genre" class = "button2" type="checkbox" value="action">
             <label class="button2">Action</label> 
                <input name = "genre" class = "button2" type="checkbox" value="comedy">
             <label class="button2">Comedy</label> 
                <input name = "genre" class = "button2" type="checkbox" value="drama">
             <label class="button2">Drama</label> 
                <input name = "genre" class = "button2" type="checkbox" value="kids&family">
             <label class="button2">Kids & Family</label> 
                <input name = "genre" class = "button2" type="checkbox" value="sci_fi"> 
             <label class="button2">Sci Fi</label> 
