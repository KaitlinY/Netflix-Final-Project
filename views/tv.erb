                <input name = "rating" class = "button2" type="checkbox" value="tv_pg">
               <label class="button2">TV-PG</label> 
               <input name = "rating" class = "button2" type="checkbox" value="tv_14">
               <label class="button2">TV-14</label> 
               <input name = "rating" class = "button2" type="checkbox" value="tv_ma">
               <label class="button2">TV-MA</label> 
             </center>
            
                <h4> <center> Male or female feature? </center> </h4>
             <center>
                <input name = "gender" class = "button2" type="checkbox" value="male">
               <label class="button2">Male</label> 
                <input name = "gender" class = "button2" type="checkbox" value="female">
               <label class="button2">Female</label> 
             </center>
      
            
            
             <form action="./endpage">
               <input align="right" class = "button2" type="submit" value="Submit">
               
         
         
     
    
